{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Zyflow Automation Docs",
  "colors": {
    "primary": "#4675d5",
    "light": "#4675d5",
    "dark": "#b7d7f9"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Blog",
          "href": "https://mintlify.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/images/Zyflow-1-Edited.png",
    "dark": "/images/Zyflow-1-Edited.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:ankit@zyflow.dev"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "linkedin": "https://www.linkedin.com/company/zyflow"
    }
  },
  "description": "Zyflow Automation Documentation and API guide",
  "favicon": "/images/Zyflow(6).png",
  "appearance": {
    "default": "light"
  },
  "background": {
    "decoration": "gradient"
  },
  "banner": {
    "content": "Please contact Support",
    "dismissible": true
  },
  "thumbnails": {
    "appearance": "light"
  },
  "search": {
    "prompt": "Type to ask your question..."
  },
  "api": {
    "playground": {
      "display": "interactive"
    }
  },
  "errors": {
    "404": {
      "title": "Nothing here "
    }
  },
  "interaction": {
    "drilldown": true
  },
  "seo": {
    "indexing": "navigable"
  }
}
